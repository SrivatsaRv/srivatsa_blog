---
import Layout from '../layouts/Layout.astro';
import CareerTimeline from '../components/CareerTimeline';
import { WORK_EXPERIENCE } from '../data/career';
---

<Layout title="Work History">
    <div class="max-w-4xl mx-auto py-12">
        
        {/* Intro */}
        <div class="mb-20 space-y-6">
            <h1 class="text-4xl md:text-6xl font-black font-mono uppercase tracking-tighter text-hud-text">
                my work<span class="text-hud-accent">.</span>so far
            </h1>
            <div class="max-w-2xl text-lg md:text-xl text-hud-muted leading-relaxed font-sans">
                <p>
                    Iâ€™m <span class="text-hud-text font-bold">Srivatsa</span>, an Infrastructure Engineer interested in writing code.
                </p>
                <p class="mt-4 text-base">
                    With 3 years of experience in private cloud operations, I want to now get feet-wet and overcome the "Talk is Cheap, Show me the Code" phase.
                    Open to roles in Site Reliability, Layer-1 Infrastructure Engineering, and Cloud.
                </p>
            </div>
        </div>

        {/* Timeline (React) */}
        <div class="mb-24">
            <CareerTimeline client:load />
        </div>

        {/* Experience Cards */}
        <div class="space-y-16">
            <div class="border-b border-hud-border pb-4 mb-8">
                <h2 class="text-xl font-mono font-bold text-hud-text uppercase tracking-widest">
                    // DEPLOYMENT_HISTORY
                </h2>
            </div>

            {WORK_EXPERIENCE.map((job) => (
                <div class="group relative pl-8 border-l-2 border-hud-border hover:border-hud-accent transition-colors duration-300">
                    <div class="absolute -left-[9px] top-0 w-4 h-4 bg-hud-black border-2 border-hud-border group-hover:border-hud-accent rounded-full transition-colors duration-300" />
                    
                    <div class="flex flex-col md:flex-row md:items-start justify-between gap-4 mb-6">
                        <div>
                            <h3 class="text-2xl font-bold font-mono text-hud-text uppercase">
                                {job.company}
                            </h3>
                            <p class="text-hud-accent font-mono text-sm tracking-wider mt-1">
                                {job.title}
                            </p>
                        </div>
                        <div class="text-right flex flex-col items-end">
                            <span class="font-mono text-sm font-bold text-hud-text">{job.date}</span>
                            <span class="text-xs text-hud-muted uppercase tracking-widest">{job.location}</span>
                        </div>
                    </div>

                    <ul class="space-y-3 mb-8">
                        {job.description.map((desc) => (
                            <li class="flex items-start gap-3 text-hud-muted text-sm md:text-base leading-relaxed">
                                <span class="text-hud-accent mt-1.5 min-w-[6px] h-[6px] bg-hud-accent rounded-full" />
                                <span>{desc}</span>
                            </li>
                        ))}
                    </ul>

                    {/* Tech Stack Chips */}
                    <div class="flex flex-wrap gap-2">
                        {job.tech.map((t) => (
                            <span class="px-3 py-1 bg-hud-black border border-hud-border text-[10px] font-mono text-hud-muted uppercase tracking-wider rounded-sm group-hover:border-hud-text transition-colors">
                                {t}
                            </span>
                        ))}
                    </div>
                </div>
            ))}
        </div>

    </div>
</Layout>
