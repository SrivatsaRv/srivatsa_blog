---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import ShareControl from '../../components/ShareControl.astro';
import { format } from 'date-fns';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const shareUrl = new URL(Astro.url.pathname, Astro.site).toString();
---

<Layout title={entry.data.title} description={entry.data.description}>
    <article class="max-w-prose mx-auto py-8">
        <!-- Metadata Header -->
        <header class="mb-12 border-b border-hud-border pb-8">
            <div class="flex items-center gap-4 text-xs font-mono text-hud-muted mb-4 uppercase tracking-widest">
                <span>{format(entry.data.pubDate, 'MMMM d, yyyy')}</span>
                <span class="text-hud-border">/</span>
                <span class="text-hud-accent">{entry.data.classification || 'Log'}</span>
            </div>
            
            <h1 class="text-3xl md:text-5xl font-bold tracking-tight text-hud-text mb-6 leading-tight">
                {entry.data.title}
            </h1>

            <div class="flex flex-wrap gap-2 mb-6">
                {entry.data.tags.map(tag => (
                    <span class="px-2 py-1 bg-hud-gray/50 text-[10px] uppercase tracking-widest text-hud-muted rounded-sm">
                        {tag}
                    </span>
                ))}
            </div>
        </header>

        <!-- Content Body (Prose) -->
        <div class="prose prose-hud max-w-none">
            <Content />
        </div>

        <!-- Action Module -->
        <div class="mt-16 pt-8 border-t border-hud-border/30">
            <ShareControl title={entry.data.title} url={shareUrl} />
        </div>
    </article>
</Layout>
